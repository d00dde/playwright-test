{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "baseUrl": ".",
    "types": [
      "node",
      "@types/jest"
    ],
    "module": "commonjs",
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./.eslintrc.js",
    "./lib/**/*.ts",
    "./config/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
